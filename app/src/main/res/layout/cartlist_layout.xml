<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <ImageView
            android:id="@+id/cartddi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorGray"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/carttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name of Design"
            android:layout_toEndOf="@+id/cartddi"
            android:padding="5dp"/>
        <CheckBox
            android:id="@+id/cartcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/cartdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_toEndOf="@+id/cartddi"
            android:layout_below="@+id/carttitle"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/cartprize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Prize"
            android:layout_toEndOf="@+id/cartddi"
            android:layout_below="@+id/cartdesc"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/del"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_close_black_48dp"
            android:background="#fff"
            android:layout_below="@+id/cartdesc"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

</LinearLayout>
